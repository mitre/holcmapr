citHeader("If using population-weighted centroid-based methods, please cite:")

citEntry(
  entry    = "Misc",
  title    = "Centers of Population (2010)",
  author   = "United States Census Bureau",
  note     = "Accessed: 2022-11-28",
  url      = "https://www.census.gov/geographies/reference-files/time-series/geo/centers-population.2010.html",
)

